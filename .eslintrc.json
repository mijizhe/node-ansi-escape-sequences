{
  "overrides": [
    {
      "files": ["*.js"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:promise/recommended"
      ],
      "env": {
        "node": true,
        "es6": true
      }
    },
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "project": ["./tsconfig.json"]
      },
      "plugins": ["eslint-plugin-tsdoc"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:import/recommended",
        "plugin:promise/recommended"
      ],
      "rules": {
        "import/no-absolute-path": ["warn"],
        "tsdoc/syntax": ["warn"]
      },
      "settings": {
        "import/resolver": {
          "alias": {
            "map": [["@", "./src/"]],
            "extensions": [".ts", ".js"]
          }
        }
      }
    }
  ],
  "ignorePatterns": [
    "**/~*",
    "**/node_modules",
    "./dist"
  ]
}
